        <!-- Top menu item -->
    
        <menuitem name="Open Transport" id="open_transport.menu_root" sequence="5"/>
    
        <!-- menu categories -->
        <menuitem name="Configurations" id="open_transport_config_cat" parent="open_transport.menu_root" sequence="20"/>
       <!--
